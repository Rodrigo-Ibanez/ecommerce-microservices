{
  "Jwt": {
    "Key": "chave-secreta-super-segura",
    "Issuer": "EcommerceAuth",
    "Audience": "EcommerceUsers"
  },
  "ReverseProxy": {
    "Routes": {
      "estoque": {
        "ClusterId": "estoqueCluster",
        "Match": { "Path": "/estoque/{**catch-all}" }
      },
      "vendas": {
        "ClusterId": "vendasCluster",
        "Match": { "Path": "/vendas/{**catch-all}" }
      }
    },
    "Clusters": {
      "estoqueCluster": { "Destinations": { "dest1": { "Address": "http://localhost:5001/" } } },
      "vendasCluster": { "Destinations": { "dest1": { "Address": "http://localhost:5002/" } } }
    }
  }
}
